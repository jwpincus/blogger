<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, text: ("#{@article.title}" if @article.title) %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, text: ("#{@article.body}" if @article.body) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </p>
<% end %>
